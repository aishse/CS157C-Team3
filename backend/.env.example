# Backend Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# Neo4j Database Configuration
# =============================================================================

# Neo4j connection URI
# For local development: bolt://localhost:7687
# For Aura: neo4j+s://xxxxxxxx.databases.neo4j.io
NEO4J_URI=bolt://localhost:7687

# Neo4j authentication credentials
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password

# =============================================================================
# Clerk Authentication Configuration
# =============================================================================

# Clerk Secret Key
# Found in your Clerk dashboard under API Keys
# IMPORTANT: Keep this secret! Never expose in client-side code
CLERK_SECRET_KEY=sk_test_your_secret_key

# Clerk Frontend API domain
# Found in your Clerk dashboard (e.g., "clerk.your-app.com" or "your-app.clerk.accounts.dev")
CLERK_FRONTEND_API=your-app.clerk.accounts.dev

# =============================================================================
# Server Configuration
# =============================================================================

# Host address for the FastAPI server
API_HOST=0.0.0.0

# Port for the FastAPI server
API_PORT=8000

# =============================================================================
# CORS Configuration
# =============================================================================

# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
